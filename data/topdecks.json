---
---
[
  {% for decktype in site.data.decklists %}
    {% assign tiertype = site.data.tierlist | where: "id", decktype[0] %}
    {
      "id": "{{decktype[0]}}",
      "display": "{{tiertype[0].display}}",
      "card": "{{tiertype[0].card}}",
      "count": "{{decktype[1].size}}",
      "decks":
      [
        {% for deck in decktype[1] %}
          {
            "author": "{{deck[1].author}}",
            "name": "{{deck[1].name}}",
            "url": "/{{decktype[0]}}/{{deck[1].name | downcase | replace: " ", "-"}}",
            "created": "{{deck[1].created}}",
            "front": "{{deck[1].main[0].name}}",
            "skill": "{{deck[1].skill}}"
          }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    }
    {% if decktype[1].size != 0 %}
      {% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]